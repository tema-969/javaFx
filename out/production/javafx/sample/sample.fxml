<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="center" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.1" fx:controller="sample.Controller">

    <TextArea fx:id="mainTextArea" editable="false" prefHeight="181.0" prefWidth="451.0" VBox.vgrow="ALWAYS">
      <opaqueInsets>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </opaqueInsets></TextArea>
    <HBox>
    <TextField fx:id="msgSend" onAction="#clickSendBtn" promptText="Напишите текст сообщения..." HBox.hgrow="ALWAYS" />
    <Button onAction="#clickSendBtn" text="Отправить" />
    </HBox>
</VBox>
